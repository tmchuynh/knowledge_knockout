{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmit": true,
        "outDir": "./dist",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",
        "typeRoots": [
            "./node_modules/@types",
        ],
        "types": [
            "node",
            "express",
            "jquery"
        ]
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/backend/server.ts",
        "src/backend/config/db.ts"
    ]
}